{% if (users|length > 0) or (groups|length > 0) %}
  <label for="inputFilterGroupsAndUsers" class="labelInput left">{{"fom.user.acl.groups_users.filter"|trans}}</label>
  <input id="inputFilterGroupsAndUsers" autofocus="autofocus" type="text" class="input left listFilterInput"/>
  <div class="clearContainer"></div>

  <table id="listFilterGroupsAndUsers" class="listFilterContainer tableCore tableUserGroups tableGroupsAndUsers">
    <thead>
      <tr class="doNotFilter">
        <th>{{ "fom.user.acl.groups_users.name"|trans }} </th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
        <tr class="filterItem">
          <td>
            <div class="tdContentWrapper iconUser">
              <label class="labelInput">{{user.getUsername}}</label>
              <span class="hide">u:{{user.getUsername}}{% if user.getClass is defined %}:{{ user.getClass }}{% endif %}</span>
              <div class="checkWrapper iconCheckbox"><input class="checkbox" type="checkbox"/></div>
            </div>
          </td>
        </tr>
      {% endfor %}
      {% for group in groups %}
        <tr class="filterItem">
          <td>
            <div class="tdContentWrapper iconGroup">
              <label class="labelInput">{{ group.getTitle }}</label>
              <span class="hide">r:{{ group.getRole() }}</span>
              <div class="checkWrapper iconCheckbox"><input class="checkbox" type="checkbox"/></div>
            </div>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% else %}
  <p class="description">{{"fom.user.acl.groups_users.no_goups_users"|trans}}</p>
{% endif %}
