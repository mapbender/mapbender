<div class="content-toggle-container">
  <div class="h4 clearfix content-toggle clickable">
    <i class="pull-right fa-solid fa-caret-down"></i>
    {{ tilematrixset.identifier }}
  </div>
  <div class="content-toggle-target">
    <table>
      <tbody>
        <tr><th>{{ "mb.wmts.wmtsloader.repo.tilematrixset.label.identifier" | trans }}:</th><td>{{ tilematrixset.identifier }}</td></tr>
        <tr><th>{{ "mb.wmts.wmtsloader.repo.tilematrixset.label.supportedcrs" | trans }}:</th><td>{{ tilematrixset.supportedCrs }}</td></tr>
        <tr><th>{{ "mb.wmts.wmtsloader.repo.tilematrixset.label.title" | trans }}:</th><td>{{ tilematrixset.title }}</td></tr>
        <tr><th>{{ "mb.wmts.wmtsloader.repo.tilematrixset.label.abstract" | trans }}:</th><td>{{ tilematrixset.abstract }}</td></tr>
      </tbody>
    </table>
    <div class="content-toggle-container indent closed">
      <div class="h4 clearfix content-toggle clickable">
        <i class="pull-right fa-solid fa-caret-right"></i>
        {{ 'mb.wmts.wmtsloader.repo.tilematrixset.matrixes' | trans }}
      </div>
      <div class="content-toggle-target smallText lighter-headings">
      {% for tilematrix in tilematrixset.tilematrices %}
        {% include "@MapbenderWmts/Repository/tilematrix.html.twig" with {'tilematrix': tilematrix }%}
      {% endfor %}
      </div>
    </div>
  </div>
</div>
