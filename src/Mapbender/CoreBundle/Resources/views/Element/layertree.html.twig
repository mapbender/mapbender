<div id="{{ id }}" class="mb-element mb-element-layertree" title="{{ title |trans }}">
  <li class="hide-elm leave showLeaves" data-state="" data-title="">
    <div class="leaveContainer">
      <span class="layer-spinner"></span>
      <span class="layer-state"></span>
      <span class="iconFolder left" title="{{ 'mb.core.layertree.tooltip.sublayers_openclose'|trans }}"></span>
      <div class="checkWrapper left iconCheckbox" title="{{ 'mb.core.layertree.label.visibility_onoff' | trans  }}">
        <input class="layer-selected checkbox" type="checkbox" name="selected">
      </div>
      <div class="checkWrapper left iconInfo featureInfoWrapper" title="{{ 'mb.core.layertree.label.featureinfo_onoff' | trans  }}">
        <input class="layer-info checkbox" type="checkbox" name="info"/>
      </div>
      <span class="layer-title labelCheck"></span>
      {% if configuration.menu != null and configuration.menu | length > 0 %}
      <span class="layer-menu-btn">&#9776;
        <div class="layer-menu">
          {% for item in configuration.menu %}
          {% if item == 'opacity' %}
          <div class="layer-opacity">
            <div class="layer-opacity-slider"></div>
            <div class="layer-opacity-labels">
              <span class="layer-opacity-label-hundred">100 %</span>
              <span class="layer-opacity-label">{{ "mb.core.layertree.label.transparency"|trans }}</span>
              <span class="layer-opacity-label-zero">0 %</span>
            </div>
          </div>
          {% elseif item == 'zoomtolayer' %}
          <span class="layer-zoom span-btn inactive">{{ 'mb.core.layertree.label.zoomtolayer'|trans }}</span>
          {% else %}
          <span class="layer span-btn inactive">Undefined</span>
          {% endif %}
          {% endfor %}
        </div>
      </span>
      {% endif %}
      <span class="iconRemove" title="{{ 'mb.core.layertree.tooltip.removelayer'|trans }}"></span>
    </div>
    <ul id="list-first" class="layers"></ul>
  </li>
  {% if configuration.showHeader %}
  <h2>{{ 'mb.core.layertree.label.sources' | trans }} (<span id="counter">0</span>)<a href="#" id="delete-all" class="icononly" title="{{ 'mb.core.layertree.label.deleteallsources' |trans }}">&times;</a></h2>
  {% endif %}
  <ul id="list-root" class="layers" ></ul>
</div>
