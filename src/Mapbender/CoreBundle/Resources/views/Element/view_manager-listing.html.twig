<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th class="compact"></th>{#- column for recall marker icons -#}
            <th>{{ 'mb.core.viewManager.title' | trans }}</th>
            {%- if showDate -%}
            <th>{{ 'mb.core.viewManager.date' | trans }}</th>
            {%- endif -%}
            <th class="compact"></th>
        </tr>
    </thead>
    <tbody>
        {%- for record in records -%}
            {% include row_template with {'record': record} %}
        {%- endfor -%}
        <tr class="placeholder-row">
            <td colspan="4" class="text-center">&ndash; {{ 'mb.core.viewManager.no_data' | trans }} &ndash;</td>
        </tr>
    </tbody>
</table>
