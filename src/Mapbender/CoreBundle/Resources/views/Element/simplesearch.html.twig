<form id="{{ id }}" class="mb-element mb-element-simplesearch" action="{{ path('mapbender_core_application_element', {'slug': app.request.get('slug'), 'id': id}) }}" method="post">
    <div class="autocompleteWrapper">
        <input type="text" class="searchterm"/>
        <div class="autocompleteList"></div>
    </div>
{% if configuration.delay == 0 %}
    <input type="submit" value="{{'Search'|trans }}"/>
{% endif %}
</form>
