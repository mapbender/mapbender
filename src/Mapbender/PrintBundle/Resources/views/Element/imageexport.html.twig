<form action="{{ submitUrl }}" method="post" target="_blank">
    {% block form_fields %}
    <h6 class="mb-3">
        {{ 'mb.print.imageexport.chooseformat'| trans }}
    </h6>
    <div class="form-check mb-3">
        <label class="form-check-label">
            <input class="form-check-input" type="radio" name="imageformat" value="png" checked />
            PNG
        </label>
    </div>
    <div class="form-check mb-3">
        <label class="form-check-label">
            <input class="form-check-input" type="radio" name="imageformat" value="jpg" />
            JPG
        </label>
    </div>
    {% endblock form_fields %}
    <div class="hidden -fn-hidden-fields"></div>
    <div class="text-end">
        {% block form_buttons %}
        <input type="submit" class="btn btn-primary btn-sm" value="{{ 'mb.print.imageexport.popup.btn.ok' | trans() }}" data-test="imageexport-btn-submit" />
        <button type="button" class="btn btn-light btn-sm popupClose" data-test="imageexport-btn-cancel">{{ 'mb.print.imageexport.popup.btn.cancel' | trans() }}</button>
        {% endblock form_buttons %}
    </div>
</form>
